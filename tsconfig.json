{
  "extends": ["@douglasneuroinformatics/tsconfig"],
  "compilerOptions": {
    "allowImportingTsExtensions": false,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "noEmit": true,
    "resolveJsonModule": true,
    "types": ["vite/client", "vitest"]
  },
  "include": [
    "__mocks__/**/*",
    ".storybook/**/*",
    "src/**/*",
    "eslint.config.js",
    "prettier.config.js",
    "tailwind.config.cjs",
    "tsup.config.mts",
    "vite.config.mts"
  ]
}
