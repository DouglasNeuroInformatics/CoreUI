{
  "name": "@douglasneuroinformatics/libui",
  "type": "module",
  "version": "2.0.1",
  "packageManager": "pnpm@8.15.3",
  "description": "Generic UI components for DNP projects, built using React and TailwindCSS",
  "author": {
    "name": "Douglas Neuroinformatics",
    "email": "support@douglasneuroinformatics.ca"
  },
  "license": "LGPL-3.0",
  "homepage": "https://github.com/DouglasNeuroInformatics/libui#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DouglasNeuroInformatics/libui"
  },
  "bugs": {
    "url": "https://github.com/DouglasNeuroInformatics/libui/issues"
  },
  "keywords": [
    "React",
    "TailwindCSS"
  ],
  "exports": {
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.js"
    },
    "./i18n": {
      "types": "./dist/i18n.d.ts",
      "import": "./dist/i18n.js"
    },
    "./styles/*": "./dist/styles/*",
    "./tailwind.config.cjs": "./tailwind.config.cjs",
    "./utils": {
      "types": "./dist/utils.d.ts",
      "import": "./dist/utils.js"
    }
  },
  "files": [
    "dist",
    "tailwind.config.cjs",
    "tailwind.config.d.cts"
  ],
  "scripts": {
    "build": "tsup && cp -r src/styles dist",
    "format": "prettier --write src",
    "format:translations": "find src/translations -name '*.json' -exec pnpm exec sort-json {} \\;",
    "lint": "tsc && eslint --fix src",
    "prepare": "husky",
    "storybook": "storybook dev --no-open -p 6006",
    "storybook:build": "storybook build",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@douglasneuroinformatics/libjs": "^0.3.0",
    "@douglasneuroinformatics/libui-form-types": "^0.6.3",
    "@headlessui/react": "^1.7.18",
    "@headlessui/tailwindcss": "^0.2.0",
    "@heroicons/react": "^2.1.3",
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-collapsible": "^1.0.3",
    "@radix-ui/react-context-menu": "^2.1.5",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-hover-card": "^1.0.7",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-menubar": "^1.0.4",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@tailwindcss/container-queries": "^0.1.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "cmdk": "^1.0.0",
    "framer-motion": "^11.0.24",
    "i18next": "23.x",
    "i18next-browser-languagedetector": "^7.2.1",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.364.0",
    "react-error-boundary": "^4.0.13",
    "react-i18next": "^14.1.0",
    "react-resizable-panels": "^2.0.16",
    "recharts": "^2.12.3",
    "tailwind-merge": "^2.2.2",
    "tailwindcss-animate": "^1.0.7",
    "ts-pattern": "^5.1.0",
    "type-fest": "^4.15.0",
    "vaul": "^0.9.0",
    "zod": "^3.22.4",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@commitlint/types": "^19.0.3",
    "@douglasneuroinformatics/eslint-config": "^4.2.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.0",
    "@storybook/addon-essentials": "^8.0.5",
    "@storybook/addon-interactions": "^8.0.5",
    "@storybook/addon-links": "^8.0.5",
    "@storybook/blocks": "^8.0.5",
    "@storybook/components": "^8.0.5",
    "@storybook/icons": "^1.2.9",
    "@storybook/manager-api": "^8.0.5",
    "@storybook/react": "^8.0.5",
    "@storybook/react-vite": "^8.0.5",
    "@storybook/theming": "^8.0.5",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "14.2.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.12.3",
    "@types/react": "^18.2.74",
    "@types/react-dom": "^18.2.23",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "@vitest/coverage-v8": "^1.4.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "happy-dom": "^14.3.10",
    "husky": "^9.0.11",
    "jsdom": "24.0.0",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.13",
    "semantic-release": "^23.0.7",
    "sort-json": "^2.0.1",
    "storybook": "^8.0.5",
    "storybook-react-i18next": "^3.0.1",
    "tailwindcss": "^3.4.3",
    "tsup": "^8.0.2",
    "typescript": "~5.4.3",
    "vite": "5.2.8",
    "vitest": "^1.4.0"
  }
}
