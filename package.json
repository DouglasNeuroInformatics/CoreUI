{
  "name": "@douglasneuroinformatics/libui",
  "type": "module",
  "version": "1.1.0",
  "packageManager": "pnpm@8.15.3",
  "description": "Generic UI components for DNP projects, built using React and TailwindCSS",
  "author": {
    "name": "Douglas Neuroinformatics",
    "email": "support@douglasneuroinformatics.ca"
  },
  "license": "LGPL-3.0",
  "keywords": [
    "React",
    "TailwindCSS"
  ],
  "exports": {
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.js"
    },
    "./i18n": {
      "types": "./dist/i18n.d.ts",
      "import": "./dist/i18n.js"
    },
    "./styles/*": "./dist/styles/*",
    "./tailwind.config.cjs": "./tailwind.config.cjs",
    "./utils": {
      "types": "./dist/utils.d.ts",
      "import": "./dist/utils.js"
    }
  },
  "main": "index.js",
  "files": [
    "dist",
    "tailwind.config.cjs",
    "tailwind.config.d.cts"
  ],
  "scripts": {
    "build": "tsup && cp -r src/styles dist",
    "format": "prettier --write src",
    "lint": "tsc && eslint --fix src",
    "prepare": "husky",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.5"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "i18next": "23.x",
    "i18next-browser-languagedetector": "^7.2.0",
    "lodash-es": "^4.17.21",
    "react-i18next": "^14.1.0",
    "tailwind-merge": "^1.14.0",
    "tailwindcss-animate": "^1.0.7",
    "type-fest": "^4.11.1",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.1.0",
    "@commitlint/config-conventional": "^19.1.0",
    "@commitlint/types": "^19.0.3",
    "@douglasneuroinformatics/eslint-config": "^4.0.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^11.0.3",
    "@storybook/addon-essentials": "^7.6.17",
    "@storybook/addon-interactions": "^7.6.17",
    "@storybook/addon-links": "^7.6.17",
    "@storybook/addon-themes": "^7.6.17",
    "@storybook/blocks": "^7.6.17",
    "@storybook/icons": "^1.2.8",
    "@storybook/manager-api": "^7.6.17",
    "@storybook/react": "^7.6.17",
    "@storybook/react-vite": "^7.6.17",
    "@storybook/theming": "^7.6.17",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.25",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "@vitest/coverage-v8": "^1.3.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "jsdom": "24.0.0",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "semantic-release": "^23.0.2",
    "storybook": "^7.6.17",
    "storybook-react-i18next": "^2.1.1",
    "tsup": "^8.0.2",
    "typescript": "~5.3.3",
    "vite": "4.4.9",
    "vitest": "^1.3.1"
  }
}
